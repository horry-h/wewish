/* pages/fortune/fortune.wxss */
.fortune-container {
  width: 100%;
  min-height: 100vh;
  /* 优化背景：深邃的午夜紫蓝渐变，增加高级感 */
  background: linear-gradient(180deg, #050a14 0%, #0d1428 40%, #151025 100%);
  position: relative;
  overflow: hidden;
}

/* 增加背景环境光，增强空间感 */
.fortune-container::before {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 120vw;
  height: 120vw;
  transform: translate(-50%, -50%);
  background: radial-gradient(circle, rgba(139, 34, 34, 0.08) 0%, transparent 70%);
  pointer-events: none;
  z-index: 0;
}

/* 状态栏 */
.status-bar {
  width: 100%;
}

/* 顶部栏 */
.top-bar {
  padding: 20rpx 40rpx;
}

.back-btn {
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  background: rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(10rpx);
}

.back-btn .icon {
  font-size: 32rpx;
}

/* 标题区 */
.title-section {
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 80rpx;
}

.main-title {
  font-size: 68rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.gradient-text {
  /* 优化标题色彩：采用更有质感的流金渐变，呼应签筒金边 */
  background: linear-gradient(135deg, #fceabb 0%, #f8b500 50%, #fceabb 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-shadow: 0 4rpx 10rpx rgba(248, 181, 0, 0.2);
}

.subtitle {
  font-size: 28rpx;
  /* 优化副标题：采用淡雅的银紫色 */
  color: rgba(214, 211, 234, 0.5);
  letter-spacing: 4rpx;
}

/* ==================== 动画风日式抽签筒 ==================== */
.shrine-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  position: relative;
  min-height: 800rpx;
  width: 100%;
}

/* 樱花粒子动画 */
.sakura-particles {
  position: absolute;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.sakura {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  background: #ffb7c5;
  border-radius: 50% 0 50% 50%;
  filter: drop-shadow(0 0 10rpx rgba(255, 183, 197, 0.4));
  opacity: 0.6;
}

.sakura.s1 { left: 10%; top: -10%; animation: sakura-fall 8s linear infinite; }
.sakura.s2 { right: 20%; top: -20%; animation: sakura-fall 10s linear infinite 2s; transform: rotate(45deg); }
.sakura.s3 { left: 40%; top: -15%; animation: sakura-fall 7s linear infinite 1s; }
.sakura.s4 { right: 5%; top: -25%; animation: sakura-fall 12s linear infinite 3s; }

@keyframes sakura-fall {
  0% { transform: translateY(0) rotate(0deg); opacity: 0; }
  10% { opacity: 0.6; }
  90% { opacity: 0.6; }
  100% { transform: translateY(1000rpx) rotate(360deg); opacity: 0; }
}

/* 六角签筒容器 - 赛博禅意风格 */
.omikuji-box {
  position: relative;
  width: 70vw;
  max-width: 520rpx;
  min-height: 500rpx; /* 确保有一个基础高度 */
  z-index: 10;
  perspective: 1200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
}

/* 悬浮呼吸动画 - 永久循环 */
.omikuji-box {
  animation: cyber-floating 4s ease-in-out infinite;
}

@keyframes cyber-floating {
  0%, 100% { 
    transform: translateY(0); 
  }
  50% { 
    transform: translateY(-20rpx); 
  }
}

/* 摇动状态覆盖悬浮动画 */
.omikuji-box.shaking {
  animation: cyber-shake 0.1s infinite !important;
  /* 移除 contrast 滤镜，防止在混合模式下产生白影 */
  filter: none !important;
  will-change: transform;
}

@keyframes cyber-shake {
  0%, 100% { 
    transform: translateX(0) rotate(0deg); 
  }
  25% { 
    transform: translateX(-8rpx) rotate(-2deg); 
  }
  75% { 
    transform: translateX(8rpx) rotate(2deg); 
  }
}

/* 赛博光晕背景 - 呼吸感 */
.cyber-glow {
  position: absolute;
  width: 140%;
  height: 140%;
  left: -20%;
  top: -20%;
  background: radial-gradient(
    ellipse at center,
    rgba(255, 230, 140, 0.15) 0%,
    rgba(123, 104, 238, 0.1) 40%,
    transparent 70%
  );
  filter: blur(50rpx);
  z-index: -1;
  animation: glow-breath 4s ease-in-out infinite;
}

@keyframes glow-breath {
  0%, 100% { 
    opacity: 0.5;
    transform: scale(0.95);
  }
  50% { 
    opacity: 0.8;
    transform: scale(1.05);
  }
}

/* 签筒图片容器 */
.cyber-bucket-wrapper {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: visible;
}

/* 签筒图片样式 - 赛博无缝融合版 */
.cyber-bucket-image {
  width: 100%;
  height: auto;
  display: block;
  /* 关键1：混合模式，过滤黑色背景，让亮部融入背景 */
  mix-blend-mode: screen;
  /* 关键2：边缘羽化蒙版，消除矩形边界感 */
  -webkit-mask-image: radial-gradient(
    circle at center,
    black 35%,
    rgba(0, 0, 0, 0.5) 55%,
    rgba(0, 0, 0, 0) 75%
  );
  mask-image: radial-gradient(
    circle at center,
    black 35%,
    rgba(0, 0, 0, 0.5) 55%,
    rgba(0, 0, 0, 0) 75%
  );
  /* 关键3：微调亮度和对比度 */
  filter: contrast(1.15) brightness(1.1);
}

/* 掉落签条适配 - 赛博禅意重构版 */
.divine-stick {
  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -35rpx;
  width: 70rpx;
  height: 300rpx;
  z-index: 50; /* 高于签筒，低于弹窗 */
  pointer-events: none;
  opacity: 0;
  will-change: transform, opacity;
}

.divine-stick.dropping {
  animation: divine-drop-zen 0.9s cubic-bezier(0.23, 1, 0.32, 1) forwards;
}

.divine-stick.landing {
  opacity: 1;
  transform: translateY(480rpx) rotate(2deg) scale(1);
}

@keyframes divine-drop-zen {
  0% { 
    transform: translateY(-150rpx) rotate(-25deg) scale(0.8); 
    opacity: 0; 
  }
  20% { 
    opacity: 1; 
  }
  60% {
    transform: translateY(500rpx) rotate(15deg) scale(1.05);
  }
  100% { 
    transform: translateY(480rpx) rotate(2deg) scale(1); 
    opacity: 1; 
  }
}

.stick-body {
  width: 100%;
  height: 100%;
  background: #F4F1EA; /* 浅檀木色/和纸感 */
  border: 1rpx solid #D4AF37; /* 极其纤细的金色边框 */
  box-shadow: 0 0 15rpx rgba(212, 175, 55, 0.2); /* 微弱金色外发光 */
  border-radius: 8rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 动效：光影扫过效果 */
.stick-shine {
  position: absolute;
  top: 0;
  left: -150%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.6),
    transparent
  );
  transform: skewX(-20deg);
  animation: light-sweep 3s infinite;
}

@keyframes light-sweep {
  0% { left: -150%; }
  30%, 100% { left: 150%; }
}

.stick-content {
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stick-text {
  writing-mode: vertical-rl;
  font-size: 32rpx;
  color: #2C2C2C; /* 深灰色文字 */
  letter-spacing: 8rpx; /* 增加呼吸感 */
  font-family: "STKaiti", "KaiTi", serif;
  font-weight: 600;
  text-align: center;
}

/* 动画风提示文字 - 赛博禅意风格 */
.anime-hint {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.anime-hint.active {
  transform: scale(0.9);
  opacity: 0.5;
}

.hint-main-box {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.bracket {
  font-size: 48rpx;
  color: #D4AF37;
  font-weight: bold;
}

/* 赛博禅意文字样式 */
.hint-text-content {
  font-size: 34rpx;
  color: #fff;
  letter-spacing: 2rpx;
  text-shadow: 0 0 15rpx rgba(255, 215, 0, 0.5);
}

.hint-text-content.cyber-zen-text {
  font-family: serif;
  letter-spacing: 4rpx;
}

/* 赛博禅意副提示文字 */
.hint-sub-box {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.4);
}

.hint-sub-box.cyber-sub-hint {
  font-family: serif;
  color: rgba(255, 255, 255, 0.6);
  letter-spacing: 4rpx;
  font-size: 24rpx;
}

.pulse-dot {
  width: 8rpx;
  height: 8rpx;
  background: #D4AF37;
  border-radius: 50%;
  animation: dot-pulse 1.5s infinite;
}

@keyframes dot-pulse {
  0%, 100% { transform: scale(1); opacity: 0.4; }
  50% { transform: scale(1.5); opacity: 1; }
}

/* 动画风历史按钮 */
.anime-history {
  margin-top: 40rpx;
}

.revisit-tag {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 40rpx;
  /* 优化按钮：深红底色搭配金边，更有仪式感 */
  background: rgba(183, 28, 28, 0.15);
  border: 1rpx solid rgba(224, 192, 104, 0.3);
  border-radius: 50rpx;
  color: #e0c068;
  font-size: 28rpx;
  backdrop-filter: blur(5px);
  animation: tag-float 3s ease-in-out infinite;
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.2);
}

@keyframes tag-float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.tag-icon {
  font-size: 32rpx;
  animation: icon-spin 4s linear infinite;
}

@keyframes icon-spin {
  from { transform: rotate(0); }
  to { transform: rotate(360deg); }
}

/* ==================== 极简艺术纸签 (Wabi-sabi Style) ==================== */

/* 结果遮罩 */
.result-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  /* 移除 transition，改为只控制显示隐藏 */
}

.result-modal.show {
  opacity: 1;
  visibility: visible;
}

/* 纯净深色背景 */
.zen-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #1A1A1A; /* 极简黑灰色 */
  z-index: 1;
  opacity: 0;
  /* 启用硬件加速 */
  will-change: opacity;
  animation: backdrop-fadein 0.3s ease-out forwards;
}

@keyframes backdrop-fadein {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* 纸签容器包裹层 */
.lucky-card-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  padding: 40rpx 0;
}

/* 核心纸签 (.lucky-card) */
.lucky-card {
  width: 88%;
  max-width: 660rpx;
  height: 82vh; /* 固定高度，确保一屏展示 */
  background-color: #F8F5F0; /* 和纸米白色 */
  /* 微弱和纸纹理模拟 */
  background-image: radial-gradient(rgba(0,0,0,0.02) 1px, transparent 0);
  background-size: 20px 20px;
  border-radius: 4rpx; /* 几乎直角，极简 */
  box-shadow: 0 40rpx 100rpx rgba(0, 0, 0, 0.25);
  overflow: hidden;
  position: relative;
  display: flex;
  flex-direction: column;
  /* 启用硬件加速和复合层 */
  will-change: transform, opacity;
  transform: translate3d(0, 80rpx, 0); /* 使用 translate3d 启用 GPU 加速 */
  opacity: 0;
}

.lucky-card.slide-up {
  animation: card-slide-up 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.15s forwards;
}

@keyframes card-slide-up {
  from { 
    transform: translate3d(0, 80rpx, 0); 
    opacity: 0; 
  }
  to { 
    transform: translate3d(0, 0, 0); 
    opacity: 1; 
  }
}

/* 顶部意象区 (Header Image) */
.header-image-box {
  width: 100%;
  height: 32vh; /* 缩小顶部图片比例 */
  position: relative;
  overflow: hidden;
  flex-shrink: 0;
  /* 启用硬件加速 */
  will-change: opacity;
}

.show .header-image-box {
  animation: content-fadein 0.4s ease-out 0.3s forwards;
  opacity: 0;
}

.header-image {
  width: 100%;
  height: 100%;
  display: block;
  filter: sepia(10%) contrast(95%); /* 增加一点怀旧感 */
}

/* 图片羽化渐变 (Masking) */
.image-feather-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: linear-gradient(to bottom, transparent, #F8F5F0);
  pointer-events: none;
}

/* 运势印章 (The Soul) */
.soul-stamp {
  position: absolute;
  top: 28vh; /* 适配缩小的图片 */
  right: 40rpx;
  z-index: 20;
  transform: rotate(15deg) scale(0);
  opacity: 0;
  /* 启用硬件加速 */
  will-change: transform, opacity;
}

.show .soul-stamp {
  animation: stamp-drop 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275) 0.5s forwards;
}

@keyframes stamp-drop {
  from { 
    opacity: 0; 
    transform: rotate(15deg) scale(0);
  }
  to { 
    opacity: 1; 
    transform: rotate(15deg) scale(1);
  }
}

.stamp-border {
  padding: 8rpx 16rpx;
  border: 4rpx solid #8B2222; /* 默认深红色 */
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(248, 245, 240, 0.95);
  box-shadow: 0 4rpx 12rpx rgba(139, 34, 34, 0.2);
}

/* 运势等级颜色微调 */
.soul-stamp.great .stamp-border { border-color: #D4AF37; } /* 大吉-金 */
.soul-stamp.great .stamp-text { color: #D4AF37; }
.soul-stamp.medium .stamp-border { border-color: #5A7552; } /* 中吉-绿 */
.soul-stamp.medium .stamp-text { color: #5A7552; }
.soul-stamp.guard .stamp-border { border-color: #666666; } /* 守-灰 */
.soul-stamp.guard .stamp-text { color: #666666; }

.stamp-text {
  font-size: 32rpx; /* 稍微缩小 */
  font-weight: bold;
  color: #8B2222;
  font-family: "STKaiti", "KaiTi", serif;
}

/* 纸签内容区 */
.paper-content {
  padding: 30rpx 50rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  overflow-y: auto; /* 允许垂直滚动 */
  overflow-x: hidden;
  position: relative;
  opacity: 0;
  /* 启用硬件加速 */
  will-change: opacity;
  /* 滚动优化 */
  -webkit-overflow-scrolling: touch;
}

.show .paper-content {
  animation: content-fadein 0.5s ease-out 0.4s forwards;
}

@keyframes content-fadein {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* 分享模式顶部提示 */
.shared-hint {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, rgba(212, 165, 116, 0.08) 0%, rgba(248, 181, 0, 0.05) 100%);
  border: 1rpx solid rgba(212, 175, 55, 0.2);
  border-radius: 40rpx;
  animation: hint-glow 3s ease-in-out infinite;
}

@keyframes hint-glow {
  0%, 100% { box-shadow: 0 0 0 rgba(212, 175, 55, 0); }
  50% { box-shadow: 0 0 20rpx rgba(212, 175, 55, 0.15); }
}

.shared-icon {
  font-size: 28rpx;
  animation: icon-sway 2s ease-in-out infinite;
}

@keyframes icon-sway {
  0%, 100% { transform: rotate(-5deg); }
  50% { transform: rotate(5deg); }
}

.shared-text {
  font-size: 22rpx;
  color: #8B7355;
  letter-spacing: 1rpx;
  font-weight: 500;
}

/* 垂直签文排版核心 (Zen Typography) */
.verse-section {
  flex: 1; /* 占据剩余主要空间 */
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  width: 100%;
  min-height: 300rpx;
}

.verse-flow {
  writing-mode: vertical-rl;
  text-orientation: upright;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.verse-line {
  font-size: 34rpx; /* 适配缩小的空间 */
  font-weight: 500;
  color: #333333;
  letter-spacing: 0.4em;
  line-height: 2.2; /* 稍微缩小行距 */
  font-family: "STKaiti", "PingFang SC", serif;
  text-align: center;
  white-space: pre-wrap; /* 自动换行保持垂直流 */
}

/* 极简宜忌区 */
.lifestyle-advice {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 40rpx;
  flex-shrink: 0;
}

.advice-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
}

.dot.green { background: #52C41A; opacity: 0.6; }
.dot.red { background: #F5222D; opacity: 0.6; }

.advice-label {
  font-size: 22rpx;
  color: #999999;
  font-weight: 600;
  width: 36rpx;
}

.advice-val {
  font-size: 24rpx;
  color: #666666;
  letter-spacing: 1rpx;
}

/* 书灵寄语 (Bottom) */
.zen-message {
  width: 100%;
  padding-top: 30rpx;
  border-top: 1rpx solid rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
}

.message-guide {
  font-size: 14rpx;
  color: #CCCCCC;
}

.message-text {
  font-size: 22rpx;
  line-height: 1.6;
  color: #888888;
  text-align: center;
  font-style: italic;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3; /* 限制寄语行数，确保不超出 */
  overflow: hidden;
}

/* 底部操作 */
.card-footer {
  margin-top: 30rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  border-top: 1rpx solid rgba(0,0,0,0.03);
  padding: 40rpx 0;
  flex-shrink: 0;
}

.footer-primary-actions {
  width: 100%;
  display: flex;
  padding: 0 40rpx;
  gap: 20rpx;
  box-sizing: border-box;
}

.footer-btn {
  height: 84rpx;
  border-radius: 42rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  letter-spacing: 2rpx;
  box-sizing: border-box;
}

.footer-btn.primary {
  flex: 1; /* 确保两个主要按钮等长 */
  background: linear-gradient(135deg, #d4a574 0%, #f4d5a6 100%);
  color: #1A1A1A;
  box-shadow: 0 8rpx 20rpx rgba(212, 165, 116, 0.2);
  border: none;
  padding: 0;
}

.footer-btn.primary.try-mine {
  flex: 1.5; /* 让"抽我的签"按钮更宽 */
  background: linear-gradient(135deg, #f8b500 0%, #fceabb 100%);
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  position: relative;
  overflow: hidden;
}

.footer-btn.primary.try-mine::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: btn-shine 3s infinite;
}

@keyframes btn-shine {
  0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
  100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

.footer-btn.secondary {
  flex: 1;
  background: transparent;
  color: #999999;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.btn-icon {
  font-size: 28rpx;
  animation: icon-pulse 1.5s ease-in-out infinite;
}

@keyframes icon-pulse {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.2); opacity: 0.8; }
}

.footer-btn.close {
  background: transparent;
  color: #999999;
  border: none;
  font-size: 24rpx;
  padding: 10rpx 40rpx;
  height: auto;
}

.footer-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

/* 虹彩天光 */
.celestial-beam {
  position: absolute;
  top: -100rpx;
  width: 500rpx;
  height: 900rpx;
  background: linear-gradient(to bottom, 
    rgba(255, 255, 255, 0) 0%, 
    rgba(255, 215, 0, 0.1) 40%, 
    rgba(255, 255, 255, 0.2) 50%, 
    rgba(255, 215, 0, 0.1) 60%, 
    rgba(255, 255, 255, 0) 100%);
  opacity: 0;
  pointer-events: none;
  z-index: 5;
  transition: opacity 0.8s ease;
}

.celestial-beam.active {
  opacity: 1;
  animation: beam-sweep 2s ease-in-out;
}

@keyframes beam-sweep {
  0% { transform: translateX(-100%) skewX(-15deg); }
  100% { transform: translateX(100%) skewX(-15deg); }
}

